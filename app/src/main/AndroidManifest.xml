<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.skarwa.articlesearch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_articlesearch_launch"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_articlesearch_launch"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ArticleSearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.skarwa.articlesearch.activities.ArticleSearchActivity" />
        </activity>
    </application>

</manifest>